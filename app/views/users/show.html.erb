<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-push-2">
                <div class="row" style="margin-top: 50px">
                    <div class="col-xs-12 col-xs-push-1 col-sm-6 col-sm-push-0 col-lg-6 col-lg-push-0">
                        <div><%= image_tag @user.avatar.url, class: "img-responsive img-center img-thumbnail"  %></div>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <h3><%= @user.firstname%> <%= @user.lastname%></h3>
                        <p>Age: <%= @age %></p>
                        <p>Gender: <%= @user.gender %></p>
                        <p>Email: <%= @user.email %></p>
                        <p id="msg-btn"><%= link_to image_tag('/images/message.png'), new_message_path(@user.id), class: "btn_message" %></p>
                        <% @places.each do |place| %> 
                            <% place.users.each do |user| %>
                                <% if user.id == current_user.id %>
                                <p>Been with you at: &nbsp;<%= place.name %></p>
                                <p>Date: <%= place.month %>, <%= place.day %>  <%= place.year %></p>
                                <% end %>
                            <% end %>
                        <% end %> 

                        
                    </div>
                </div>
        </div>
    </div>

<hr>

<!-- .row -->

        <h3>Last Visited Places</h3>
            <% @places.each do |place| %>
                <div class="row-fluid text-center">
                    <div class="col-xs-12 col-sm-3">
                        <div class="thumbnail">
                            <div class="erven"><img src="<%= place.logo %>" alt=""></div>
                            <div class="caption">
                                <span><%= place.name %></span>
                                <p><%= place.address %></p>
                                <p><%= place.phone %></p>
                            </div>
                            <p><%= link_to 'More Info', place_path(place.id), class: "btn btn-warning" %></p> 
                        </div>
                    </div>
                </div>
            <% end %>
       
<!-- /.row -->
</div>
<style>
    
    .caption {min-height: 230px;}
    h3 {color: #ECECEA;text-align:center;}
    @media(max-width: 768px){h3{text-align: left;}}

</style>