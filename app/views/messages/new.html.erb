<style>
		#form_text {
			border-radius: 5px;
			outline: none;
			color: grey;

		}
		label {
			position: absolute;
			top: 72px;
		}
		.btn {
			margin-top: 5px;
			width: 100px;
		}

		h2 {
			font-size: 15px;
			margin: 2px auto;
			float: right;
		}

		.hero-spacer {
			box-shadow: 1px 2px 3px 1px grey;
		}

</style>


<header class="jumbotron hero-spacer">
	<%= form_for :message do |f| %>
		<%= f.label :Message %>
		   	<%= f.text_area :body, size: "60x8", id: "form_text" %><br />
		    	<%= f.hidden_field :user_id, :value => params[:user_id] %>
    		<%= f.hidden_field :sender_id, :value => @current_user.id %>   
     <%= f.submit 'Submit', :class => 'btn btn-default' %>
 <% end %>
</header>

<hr>

	<div class="container">
<!-- sent messages -->
			<div class="col-md-6">
						<p>Sent:</p>
								<% @sent.each do |s| %> 
											<div class="blok_left">
													<p><%= s.body %></p><br>
															<% User.where(id: s.user_id).each do |u| %>
																<%= u.firstname %> <%= u.lastname %>
																<% end %>
															<h2><%= s.created_at.strftime("%d %b. %Y") %> <%= s.created_at.strftime("%H:%M") %></h2>
											</div>
								<% end %> 
			</div>
<!-- received messages -->
			<div class="col-md-6">
							<p>Received:</p>
									<% @received.each do |r| %> 
											<div class="blok_right">
													<p><%= r.body %></p><br>
													<% User.where(id: r.sender_id).each do |u| %>
																<%= u.firstname %> <%= u.lastname %>
																<% end %>
														<h2><%= r.created_at.strftime("%d %b. %Y") %> <%= r.created_at.strftime("%H:%M") %></h2>
											</div>
									<% end %> 
			</div>

	</div>