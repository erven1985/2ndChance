<style>
		
		#form_text {
			border-radius: 5px;
			outline: none;
			color: grey;

		}
		label {
			position: absolute;
			top: 72px;
		}
		.btn {
			margin-top: 5px;
			width: 100px;
		}

		.blok {
			position:relative;
			width:40%;
			padding:1em;
			margin:2em 10px 4em;
			background:#fff;
			box-shadow: 0 15px 10px -10px rgba(0, 0, 0, 0.5), 0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
		}

		.blok:before,
		.blok:after {
			content:"";
			position:absolute;
			z-index:-2;
		}

		.blok {
			font-size:16px;
			font-weight:bold;
			
		}

</style>


<header class="jumbotron hero-spacer">
	<%= form_for :message do |f| %>
		<%= f.label :Message %>
		   	<%= f.text_area :body, size: "60x8", id: "form_text" %><br />
		    	<%= f.hidden_field :user_id, :value => params[:user_id] %>
    		<%= f.hidden_field :sender_id, :value => @current_user.id %>   
     <%= f.submit 'Submit', :class => 'btn btn-default' %>
 <% end %>
</header>

<hr>


<% @messages.each do |message| %> 
	<div class="blok"><%= message.body %></div><br>
	<% end %> 
	


